@model IEnumerable<Tabledata>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4" style="width:100%;">
        <div class="col-6">
            <h2 class="text-primary text-start">Tabledata List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tabledata" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle mx-2"></i>Create New Tabledata
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Department
            </th>
            <th>
                order
            </th>
            <th>
                Date Created
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.Department
                </td>
                <td width="15%">
                    @obj.DisplayOrder
                </td>
                <td width="35%">
                    @obj.CreatedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
