@model IEnumerable<Tabledata>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4 mb-4" style="width:100%;">
        <div class="col-6">
            <h2 class="text-primary text-start">Tabledata List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tabledata" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle mx-2"></i>Create New Tabledata
            </a>
        </div>
    </div>


    <table class="table table-bordered table-light table-striped">
        <thead>
            <tr>
                <th style="border:1px solid black;">
                    Name
                </th>
                <th style="border:1px solid black;">
                    Department
                </th>
                <th style="border:1px solid black;">
                    order
                </th>
                <th style="border:1px solid black;">
                    Date Created
                </th>
                <th style="border:1px solid black;">

                </th>
                <th style="border:1px solid black;">

                </th>
            </tr>
        </thead>
        <tbody class="content">
            @foreach (var obj in Model)
            {
                <tr>
                    <td style=" width:fit-content; border:1px solid black;">
                        @obj.Name
                    </td>
                    <td style="width:fit-content; border:1px solid black;">
                        @obj.Department
                    </td>
                    <td style="width:fit-content; border:1px solid black;">
                        @obj.DisplayOrder
                    </td>
                    <td style="width:fit-content; border:1px solid black;">
                        @obj.CreatedDateTime
                    </td>
                    <td style="width:fit-content; border:1px solid black;">
                        <div role="group" style="border:1px solid grey; border-radius:10px; background-color:grey;">
                            <a asp-controller="Tabledata" asp-action="Edit" asp-route-id="@obj.Id" style="color:white;">
                                <i class="bi bi-pencil-square"></i><b>Edit</b>
                            </a>
                        </div>
                    </td>
                    <td style="width:fit-content; border:1px solid black;">
                        <div role="group">
                            <a asp-controller="Tabledata" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash" style="color:red;"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
