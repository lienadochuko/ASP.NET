@model IEnumerable<Tabledata>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 mb-4" style="width:100%;">
        <div class="col-6">
            <h2 class="text-primary text-start">Tabledata List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tabledata" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle mx-2"></i>Create New Tabledata
            </a>
        </div>
    </div>


    <table class="table table-bordered table-light table-striped">
        <thead>
            <tr>
            <th style="border:1px solid black;">
                Name
            </th>
                <th style="border:1px solid black;">
                Department
            </th>
                <th style="border:1px solid black;">
                order
            </th>
                <th style="border:1px solid black;">
                Date Created
            </th>
        </tr>
    </thead>
    <tbody class="content">
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%" style="border:1px solid black;">
                    @obj.Name
                </td>
                    <td width="25%" style="border:1px solid black;">
                    @obj.Department
                </td>
                    <td width="15%" style="border:1px solid black;">
                    @obj.DisplayOrder
                </td>
                    <td width="35%" style="border:1px solid black;">
                    @obj.CreatedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
